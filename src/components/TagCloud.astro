---
import { getTagCounts } from '../scripts/countTags';

const tagCounts = await getTagCounts();
---

<h3>Tag Cloud</h3>
<ul class="tag-cloud | list-none">
  {Object.values(tagCounts).map(({ name, slug, count }) => (
    <li class="tag-cloud__item">
      <a class="tag-cloud__link" href={`/projects/tags/${slug}`}>
        <span class="tag-cloud__count">{count}</span> 
        {name}
      </a>
    </li>
  ))}
</ul>

